{
  "manifest_version": 3,
  "name": "SEO Toolkit Extension",
  "description": "A powerful set of SEO tools by Nafis Iqbal. To boost your SEO productivity with robots.txt, sitemap finder, schema validator, and more.",
  "version": "2.0",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
